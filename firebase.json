{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "server",
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
    "ignore": [
      "**/node_modules/**",
      "**/source/",
      "**/",
      "README.md",
      "package-lock.json",
      "firebase.json",
      "env.json"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/**",
      "**/public/**",
      ".env"
    ],
    "rewrites": [
      {
        "source": "/v1/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
